{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./**/*.{tsx,ts} ",
    "tailwind.config.cjs",
    "vite.config.ts",
    ".eslintrc.cjs",
     "src/**/*.{tsx,ts}",
     "src",
    "jest.config.ts",
    "jest.setup.ts"
   ],
  "baseUrl": ".",
  "paths": {
      "@/*": ["./src/*"],
      
       /* "@components/*": ["src/components/*"],  */
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
