{
  // https://www.youtube.com/watch?v=BKz7rnbQyK4&t=1009s
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./global.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./**/*.js ",
    "./config/*.ts",
    "src/**/*.ts",
    "./global.d.ts",
    ".eslintrc.cjs",
  ],
  "exclude": ["build", "node_modules"]
}
