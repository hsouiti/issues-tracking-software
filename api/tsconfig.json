{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./src/interfaces",
      "./global.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": [
    
    "./**/*.js ",
    "./config/*.ts",
    "src/**/*.ts",
    "./global.d.ts",
    ".eslintrc.cjs",
    "jest.config.ts"
,   "__test__/**/*.spec.ts" 
, "__test__/controllers/auth.ts", "__test__/controllers/users.ts" ],
  "exclude": ["build", "node_modules"]
}
